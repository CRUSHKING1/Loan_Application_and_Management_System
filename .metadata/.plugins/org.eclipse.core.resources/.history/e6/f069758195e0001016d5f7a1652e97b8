package com.loanapp.creditscore.dto;

import lombok.Data;

@Data
public class CreditScoreRequestDto {

    private String panNumber;

    // Getter and Setter for panNumber
    public String getPanNumber() {
        return panNumber;
    }

    public void setPanNumber(String panNumber) {
        this.panNumber = panNumber;
    }

    // Custom isValid method inside DTO to manually validate panNumber
    public String isValid() {
        
        if (panNumber == null || panNumber.trim().isEmpty()) {
            return "PAN number cannot be empty";
        }

        // Check if the length of panNumber is exactly 10
        if (panNumber.length() != 10) {
            return "PAN number must be exactly 10 characters";
        }

        // Check if panNumber contains only alphanumeric characters (optional pattern validation)
        if (!panNumber.matches("[A-Za-z0-9]+")) {
            return "PAN number must be alphanumeric";
        }

        // If all checks pass, return null or a success message
        return null;  // null means valid
    }
}
